<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/logo_menu"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="add note"
            android:id="@+id/note"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@drawable/_note"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="gallery"
            android:id="@+id/gallery"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@drawable/_gallery"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="add date"
            android:id="@+id/date"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="@drawable/_callendar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="tests"
            android:id="@+id/test"
            android:layout_gravity="center_horizontal"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="@drawable/_test"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="add translate"
            android:id="@+id/translate"
            android:layout_column="1"
            android:background="@drawable/_translate"
            android:layout_rowWeight="0"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</LinearLayout>